
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    tools:context="com.example.lisacampbell.sharpshooterapp.BeforePhoto"
    android:background="@color/darky">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >


    <!-- TODO: Update blank fragment layout -->

    <TextView android:text="@string/frontalSelfie" android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:textSize="25dp"
        android:id="@+id/frontalSelfie"
        android:textColor="@color/backgroundycolor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:typeface="normal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/cameraBtn" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/cameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/kill"
        android:text="Kill"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Enter Number to Kill Here"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:id="@+id/killnum"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/buttoncolor"
        android:layout_gravity="center" />

    <TextView android:text="@string/number" android:layout_width="122dp"
        android:layout_height="123dp"
        android:textSize="25dp"
        android:id="@+id/numberID"
        android:textColor="@color/backgroundycolor"
        android:layout_below="@id/frontalSelfie"
        android:typeface="normal"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!--<ImageView-->
        <!--android:src="@drawable/ic_camera_alt_black_24dp.png"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="fill_parent"-->
        <!--/>-->

    </RelativeLayout>
</FrameLayout>
