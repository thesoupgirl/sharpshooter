
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_frame"
    tools:context="com.example.lisacampbell.sharpshooterapp.BeforePhoto"
    android:background="@color/darky"
    android:layoutMode="clipBounds"
    android:paddingTop="0dp"
    android:paddingLeft="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >


    <!-- TODO: Update blank fragment layout -->
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/status"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="@color/kill"
            android:text="Check Status"
            android:clickable="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="130dp" />
        <!--<com.gc.materialdesign.views.ButtonRectangle-->
            <!--android:id="@+id/status"-->
            <!--android:layout_width="50dp"-->
            <!--android:textSize="20dp"-->
            <!--android:layout_height="70dp"-->
            <!--android:background="@color/kill"-->
            <!--android:text="Check Status"-->
            <!--android:clickable="true"-->
            <!--android:layout_gravity="center_horizontal|top"-->
            <!--android:paddingBottom="130dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_centerHorizontal="true" />-->
        <TextView android:text="@string/targety" android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:id="@+id/target"
            android:textColor="@color/backgroundycolor"
            android:typeface="normal"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView android:text="@string/blank" android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:textSize="25dp"
            android:id="@+id/targetName"
            android:textColor="@color/backgroundycolor"
            android:typeface="normal"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignTop="@+id/target"
            android:layout_alignEnd="@+id/numberID" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/cameraBtn"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="@color/kill"
            android:text="Kill!"
            android:textSize="10dp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="130dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text=" Enter Number to Kill Here"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:id="@+id/killnum"
        android:background="@color/buttoncolor"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/cameraBtn"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/number" android:layout_width="122dp"
        android:layout_height="45dp"
        android:textSize="30dp"
        android:id="@+id/numberID"
        android:textColor="@color/backgroundycolor"
        android:typeface="normal"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/status"
        android:layout_toEndOf="@+id/target"
        android:layout_marginTop="45dp" />

    <!--<ImageView-->
        <!--android:src="@drawable/ic_camera_alt_black_24dp.png"-->
